
<% include('../layouts/header.ejs') %>

<style>
  body {
    background-color: rgb(232, 218, 218); 
  }

  .center-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh; 
  }
</style>

<div class="container center-container">
  <div class="row justify-content-center">
    <div class="col-md-6 mt-5 bg-white p-4 rounded">
      <h1 class="text-center">User Registration Form</h1>

      <form action="" method="post" enctype="multipart/form-data">
       
        

        <div class="mb-3">
          <input type="text" class="form-control" name="name" placeholder="Name" required pattern="^[A-Za-z][A-Za-z\s]*[A-Za-z]$">
        </div>
          <br><br>
        <div class="mb-3">
          <input type="email" class="form-control" name="email" placeholder="Email" required>
        </div>
        <br><br>
        <div class="mb-3">
          <input type="number" class="form-control" name="mobile" placeholder="Mobile Number" required>
        </div>
        <br><br>
        <div class="mb-3">
          <input type="file" class="form-control" name="image" required>
        </div>
        <br><br>
        <div class="mb-3">
          <input type="password" class="form-control" name="password" placeholder="Enter Password" required  >
        </div>
        <br><br>
        <div class="mb-3">
          <input type="submit" class="btn btn-success" value="Register">
        </div>
        <br><br>
      </form>
      <a href="/login"><input type="submit" value="Back To Login"></a>
      <% if (typeof message !== 'undefined') { %>
        <p class="text-success"><%= message %></p>
      <% } %>
    </div>
  </div>
</div>



<% include('../layouts/footer.ejs') %>
