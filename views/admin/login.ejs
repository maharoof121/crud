
<% include('../layouts/header.ejs') %>

<style>
  body {
    background-color: #8effa9; 
  }

  .center-container {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh; 
  }

  .login-form {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
  }
</style>

<div class="container center-container">
  <div class="row justify-content-center">
    <div class="col-md-6 mt-5 login-form">
      <h1 class="text-center">Admin Login</h1>

      <% if (typeof message !== 'undefined') { %>
        <h3 class="text-center"><%= message %></h3>
      <% } %>

      <form action="" method="POST">
        <input type="email" class="form-control mb-3" name="email" placeholder="Enter Email" required>
        <input type="password" class="form-control mb-3" name="password"   placeholder="Enter Password" required>
        <input type="submit" class="btn btn-success" value="Login">
      </form>
    </div>
  </div>
</div>

<% include('../layouts/footer.ejs') %>
